{
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100,
    "proseWrap": "preserve",
    "overrides": [
        { "files": ["*.json", "*.yml"], "options": { "tabWidth": 2 } },
        { "files": ["*.ts", "*.tsx", "*.js", "*.jsx"], "options": { "tabWidth": 4 } }
    ]
}
